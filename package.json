{
  "name": "fluid-experiment",
  "version": "0.0.1",
  "author": "Michael Genty <michaelgenty.com>",
  "scripts": {
    "scss": "node-sass --output-style nested --indent-type tab --indent-width 1 -o dist/css src/scss",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '&gt; 5%, ie 9' -r dist/css/*",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -b -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "serve": "browser-sync start --server --files 'dist/css/*.css, dist/js/*.js'",
    "build:css": "npm run scss && npm run autoprefixer",
    "watch:css": "onchange 'src/scss/*.scss' -- npm run build:css",
    "watch:js": "onchange 'src/js/*.js' -- npm run uglify",
    "start": "parallelshell 'npm run serve' 'npm run watch:css' 'npm run watch:js'"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "browser-sync": "^2.18.12",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^4.0.0",
    "uglify-js": "^3.0.13"
  }
}
